@model Visit
@{
    ViewData["Title"] = "Visita del " + Model.VisitDate.ToString("dd/MM/yyyy");
}

<div class="modal-body container mt-2">

    <h4 class="mb-4">
        Visita del @Model.VisitDate.ToString("dd/MM/yyyy")
    </h4>

    <div class="timeline">

        <div class="timeline-item">
            <h5>Médico</h5>
            <div class="timeline-card">
                <strong>@Model.Medic?.Name</strong>
            </div>
        </div>

        <div class="timeline-item">
            <h5>Motivo</h5>
            <div class="timeline-card">
                @Model.Reason
            </div>
        </div>

        <div class="timeline-item">
            <h5>Tratamiento</h5>
            <div class="timeline-card">
                @Model.Treatment
            </div>
        </div>

        <div class="timeline-item">
            <h5>Evolución</h5>
            <div class="timeline-card">
                @Model.EvolutionNotes
            </div>
        </div>

        <div class="timeline-item">
            <h5>Laboratorio</h5>
            <div class="timeline-card">
                @Model.LabResults
            </div>
        </div>

        <div class="timeline-item">
            <h5>Otros estudios</h5>
            <div class="timeline-card">
                @Model.OtherStudies
            </div>
        </div>

        <div class="timeline-item">
            <h5>Observaciones</h5>
            <div class="timeline-card">
                @Model.Observations
            </div>
        </div>

        <div class="timeline-item">
            <h5>Diagnóstico</h5>
            <div class="timeline-card">
                <p><strong>@Model.Diagnosis</strong></p>
                <p>@Model.DiagDescription</p>
            </div>
        </div>

    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
</div>
