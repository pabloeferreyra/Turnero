@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="d-flex align-items-center justify-content-between mb-2">
	<div>
	</div> <!-- espacio para posible filtro futuro -->
	<div class="ms-auto d-flex align-items-center">
		<label for="pageSize" class="me-2 mb-0">Mostrar:</label>
		<select id="pageSize" class="form-select form-select-sm" style="width: auto">
			<option value="25" selected>25 filas</option>
			<option value="50">50 filas</option>
			<option value="-1">Todo</option>
		</select>
	</div>
</div>

<div class="table-responsive">
	<table id="visits" class="table table-hover align-middle">
		<thead>
			<tr>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn sortable" data-index="0" aria-sort="none">
						Fecha <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn sortable" data-index="1" aria-sort="none">
						Médico <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn sortable" data-index="2" aria-sort="none">
						Motivo <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>Acción</th>
			</tr>
		</thead>
		<tbody id="visits-body">
			<tr><td colspan="4" class="text-center">Cargando visitas...</td></tr>
		</tbody>
	</table>
</div>

<div class="d-flex justify-content-between align-items-center mt-2">
	<div id="pageInfo" class="text-muted small"></div>
	<nav>
		<ul id="visits-pagination" class="pagination pagination-sm mb-0"></ul>
	</nav>
</div>
