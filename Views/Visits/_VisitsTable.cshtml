@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<div class="d-flex align-items-center mb-2">
	<div class="ms-auto d-flex align-items-center">
		<label class="me-2 mb-0">Mostrar:</label>
		<select id="pageSize" class="form-select form-select-sm" style="width: auto">
			<option value="25" selected>25 filas</option>
			<option value="50">50 filas</option>
			<option value="-1">Todo</option>
		</select>
	</div>
</div>
<div class="table-responsive">
	<table id="visits" class="table table-hover">
		<thead>
			<tr>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn" data-index="0" aria-sort="none">
						Fecha <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn" data-index="1" aria-sort="none">
						Médico <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn" data-index="2" aria-sort="none">
						Motivo <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>Acción</th>
			</tr>
		</thead>
		<tbody id="visits-body">
		</tbody>
	</table>
</div>
<nav>
	<ul id="visits-pagination" class="pagination">
	</ul>
</nav>