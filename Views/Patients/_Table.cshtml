@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="d-flex align-items-center mb-2">
	<div class="ms-auto d-flex align-items-center">
		<label class="me-2 mb-0">Mostrar:</label>
		<select id="pageSize" class="form-select form-select-sm" style="width: auto">
			<option value="25">25 filas</option>
			<option value="50">50 filas</option>
			<option value="-1" selected>Todo</option>
		</select>
	</div>
</div>
<div class="table-responsive">
	<table id="patients" class="table table-hover">
		<thead>
			<tr>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn" data-index="0" aria-sort="none">
						Nombre <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn" data-index="1" aria-sort="none">
						Dni <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn" data-index="2" aria-sort="none">
						Fecha de Nacimiento <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn" data-index="3" aria-sort="none">
						Obra Social <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn" data-index="4" aria-sort="none">
						Número de Afiliado <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>Acción</th>
			</tr>
		</thead>
		<tbody id="patients-body">
		</tbody>
	</table>
</div>
<nav>
	<ul id="patients-pagination" class="pagination">
	</ul>
</nav>
