@model CongErrors

<form id="CongErrorsEditForm">
    <input type="hidden" asp-for="Id" />

    <div class="row g-3">

        <div class="col-md-6">

            <div class="d-flex align-items-center border-bottom py-2 gap-3">
                <label class="switch-ios mb-0">
                    <input type="checkbox" asp-for="CongHypothyroidism" />
                    <span class="slider-ios"></span>
                </label>

                <label class="fw-semibold flex-grow-1 mb-0">
                    @Html.DisplayNameFor(m => m.CongHypothyroidism)
                </label>

                <select asp-for="ResultHypothyroidism"
                        class="form-select"
                        style="width: min-content;"
                        asp-items="ViewBag.ResultList">
                </select>
            </div>

            <div class="d-flex align-items-center border-bottom py-2 gap-3">
                <label class="switch-ios mb-0">
                    <input type="checkbox" asp-for="Phenylalanine" />
                    <span class="slider-ios"></span>
                </label>

                <label class="fw-semibold flex-grow-1 mb-0">
                    @Html.DisplayNameFor(m => m.Phenylalanine)
                </label>

                <select asp-for="ResultPhenylalanine"
                        class="form-select"
                        style="width: min-content;"
                        asp-items="ViewBag.ResultList">
                </select>
            </div>

            <div class="d-flex align-items-center border-bottom py-2 gap-3">
                <label class="switch-ios mb-0">
                    <input type="checkbox" asp-for="FQP" />
                    <span class="slider-ios"></span>
                </label>

                <label class="fw-semibold flex-grow-1 mb-0">
                    @Html.DisplayNameFor(m => m.FQP)
                </label>

                <select asp-for="ResultFQP"
                        class="form-select"
                        style="width: min-content;"
                        asp-items="ViewBag.ResultList">
                </select>
            </div>

        </div>

        <div class="col-md-6">

            <div class="d-flex align-items-center border-bottom py-2 gap-3">
                <label class="switch-ios mb-0">
                    <input type="checkbox" asp-for="Biotinidase" />
                    <span class="slider-ios"></span>
                </label>

                <label class="fw-semibold flex-grow-1 mb-0">
                    @Html.DisplayNameFor(m => m.Biotinidase)
                </label>

                <select asp-for="ResultBiotinidase"
                        class="form-select"
                        style="width: min-content;"
                        asp-items="ViewBag.ResultList">
                </select>
            </div>

            <div class="d-flex align-items-center border-bottom py-2 gap-3">
                <label class="switch-ios mb-0">
                    <input type="checkbox" asp-for="Galactosemia" />
                    <span class="slider-ios"></span>
                </label>

                <label class="fw-semibold flex-grow-1 mb-0">
                    @Html.DisplayNameFor(m => m.Galactosemia)
                </label>

                <select asp-for="ResultGalactosemia"
                        class="form-select"
                        style="width: min-content;"
                        asp-items="ViewBag.ResultList">
                </select>
            </div>

            <div class="d-flex align-items-center border-bottom py-2 gap-3">
                <label class="switch-ios mb-0">
                    <input type="checkbox" asp-for="OHP" />
                    <span class="slider-ios"></span>
                </label>

                <label class="fw-semibold flex-grow-1 mb-0">
                    @Html.DisplayNameFor(m => m.OHP)
                </label>

                <select asp-for="ResultOHP"
                        class="form-select"
                        style="width: min-content;"
                        asp-items="ViewBag.ResultList">
                </select>
            </div>

        </div>

    </div>

    <div class="mt-4">
        <label asp-for="Other" class="fw-semibold"></label>
        <textarea asp-for="Other" class="form-control" rows="5"></textarea>
    </div>

    <div class="mt-3 text-end">
        <button type="button"
                class="btn btn-primary"
                data-save-congerrors>
            Guardar
        </button>
    </div>
</form>
