<div class="d-flex align-items-center justify-content-between mb-2">
	<div></div> <!-- espacio para posible filtro futuro -->
	<div class="ms-auto d-flex align-items-center">
		<label for="pageSizeAllergies" class="me-2 mb-0">Mostrar:</label>
		<select id="pageSizeAllergies" class="form-select form-select-sm" style="width: auto">
			<option value="25" selected>25 filas</option>
			<option value="50">50 filas</option>
			<option value="-1">Todo</option>
		</select>
	</div>
</div>

<div class="table-responsive">
	<table id="allergies" class="table table-hover align-middle">
		<thead>
			<tr>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn sortable" data-index="0" aria-sort="none">
						Nombre <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn sortable" data-index="1" aria-sort="none">
						Inicio <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn sortable" data-index="2" aria-sort="none">
						Fin <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>
					<button type="button" class="btn btn-link p-0 sort-btn sortable" data-index="3" aria-sort="none">
						Severidad <span class="sort-indicator ms-1"></span>
					</button>
				</th>
				<th>Acción</th>
			</tr>
		</thead>
		<tbody id="allergies-body">
			<tr><td colspan="5" class="text-center">Cargando alergias...</td></tr>
		</tbody>
	</table>
</div>

<div class="d-flex justify-content-between align-items-center mt-2">
	<div id="pageInfoAllergies" class="text-muted small"></div>
	<nav>
		<ul id="allergies-pagination" class="pagination pagination-sm mb-0"></ul>
	</nav>
</div>
