@model PerinatalBackground
<form id="PerinatalBackgroundEditForm">
	<input type="hidden" asp-for="Id" />
	<div class="row g-3">
		<div class="col-md-6">
			<div class="d-flex justify-content-between align-items-center border-bottom py-2">
				<span class="fw-semibold">@Html.DisplayNameFor(m => m.Feat)</span>
				<input type="number"
					   min="0" class="form-control w-50" asp-for="Feat" id="Feat" />
			</div>
			<div class="d-flex justify-content-between align-items-center border-bottom py-2">
				<span class="fw-semibold">@Html.DisplayNameFor(m => m.Delivery)</span>
				<input type="number"
					   min="0" class="form-control w-50" asp-for="Delivery" id="Delivery" />
			</div>
			<div class="d-flex justify-content-between align-items-center border-bottom py-2">
				<span class="fw-semibold">@Html.DisplayNameFor(m => m.Cesarean)</span>
				<input type="number"
					   min="0" class="form-control w-50" asp-for="Cesarean" id="Cesarean" />
			</div>
			<div class="d-flex justify-content-between align-items-center border-bottom py-2">
				<span class="fw-semibold">@Html.DisplayNameFor(m => m.Abort)</span>
				<input type="number"
					   min="0" class="form-control w-50" asp-for="Abort" id="Abort" />
			</div>
			<div class="d-flex justify-content-between align-items-center border-bottom py-2">
				<span class="fw-semibold">@Html.DisplayNameFor(m => m.GestAge)</span>
				<input type="number"
					   min="0" class="form-control w-50" asp-for="GestAge" id="GestAge" />
			</div>
		</div>
		<div class="col-md-6">
			<div class="d-flex justify-content-between align-items-center border-bottom py-2">
				<span class="fw-semibold">@Html.DisplayNameFor(m => m.Weight)</span>
				<input type="number"
					   min="0" class="form-control w-50" asp-for="Weight" id="Weight" />gr.
			</div>
			<div class="d-flex justify-content-between align-items-center border-bottom py-2">
				<span class="fw-semibold">@Html.DisplayNameFor(m => m.Height)</span>
				<input type="number"
					   min="0" class="form-control w-50" asp-for="Height" id="Height" />cm.
			</div>
			<div class="d-flex justify-content-between align-items-center border-bottom py-2">
				<span class="fw-semibold">@Html.DisplayNameFor(m => m.CefPer)</span>
				<input type="number"
					   min="0" class="form-control w-50" asp-for="CefPer" id="CefPer" />cm.
			</div>
			<div class="d-flex justify-content-between align-items-center border-bottom py-2">
				<span class="fw-semibold">@Html.DisplayNameFor(m => m.Apgar1)</span>
				<input type="number"
					   min="0" class="form-control w-50" asp-for="Apgar1" id="Apgar1" />
			</div>
			<div class="d-flex justify-content-between align-items-center border-bottom py-2">
				<span class="fw-semibold">@Html.DisplayNameFor(m => m.Apgar5)</span>
				<input type="number"
					   min="0" class="form-control w-50" asp-for="Apgar5" id="Apgar5" />
			</div>
		</div>
		<div class="mt-4">
			<label class="fw-semibold">@Html.DisplayNameFor(m => m.Pathologies)</label>
			<textarea asp-for="Pathologies" class="form-control" id="Pathologies" rows="5"></textarea>
		</div>
		<div class="mt-4">
			<label class="fw-semibold">@Html.DisplayNameFor(m => m.CongErrors)</label>
			<textarea asp-for="CongErrors" class="form-control" id="CongErrors" rows="5"></textarea>
		</div>
	</div>

	<div class="mt-3 text-end">
		<button type="button"
				class="btn btn-primary"
				data-save-perinatal>
			Guardar
		</button>
	</div>
</form>