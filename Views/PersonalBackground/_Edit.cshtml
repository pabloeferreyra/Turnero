@model PersonalBackground
<form id="PersonalBackgroundEditForm">

    <input type="hidden" asp-for="Id" />

    <div class="row g-3">

        <div class="col-md-6">

            @foreach (var prop in ViewData.ModelMetadata.Properties
                        .Where(p => p.ModelType == typeof(bool))
                        .Take(8))
            {
                var value = (bool)Model.GetType().GetProperty(prop.PropertyName)!.GetValue(Model)!;

                <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                    <label class="fw-semibold">@prop.DisplayName</label>

                    <label class="switch-ios">

                        <input type="checkbox"
                               name="@prop.PropertyName"
                               value="true"
                               @(value ? "checked" : "") />

                        <span class="slider-ios"></span>
                    </label>
                </div>
            }

        </div>

        <div class="col-md-6">

            @foreach (var prop in ViewData.ModelMetadata.Properties
                        .Where(p => p.ModelType == typeof(bool))
                        .Skip(8))
            {
                var value = (bool)Model.GetType().GetProperty(prop.PropertyName)!.GetValue(Model)!;

                <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                    <label class="fw-semibold">@prop.DisplayName</label>

                    <label class="switch-ios">

                        <input type="checkbox"
                               name="@prop.PropertyName"
                               value="true"
                               @(value ? "checked" : "") />

                        <span class="slider-ios"></span>
                    </label>
                </div>
            }

        </div>

    </div>

    <div class="mt-4">
        <label class="fw-semibold">@Html.DisplayNameFor(m => m.Other)</label>
        <textarea asp-for="Other" class="form-control" rows="3"></textarea>
    </div>

    <div class="mt-3 text-end">
        <button type="button"
                class="btn btn-primary"
                data-save-background>
            Guardar
        </button>
    </div>

</form>