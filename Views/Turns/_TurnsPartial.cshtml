@using Turnero.DAL.Models;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="d-flex align-items-center mb-2">
    <div class="me-2">
        <button id="btnExportExcel" class="btn btn-outline-primary">Exportar Excel</button>
    </div>
    <div class="me-2">
        <button id="btnExportPdf" class="btn btn-outline-primary">Exportar PDF</button>
    </div>
    <div class="ms-auto d-flex align-items-center">
        <label class="me-2 mb-0">Mostrar:</label>
        <select id="pageSize" class="form-select form-select-sm" style="width: auto">
            <option value="25">25 filas</option>
            <option value="50">50 filas</option>
            <option value="-1" selected>Todo</option>
        </select>
    </div>
</div>
<div class="table-responsive">
    <table id="turns" class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Dni</th>
                <th>Obra Social</th>
                <th>Motivo</th>
                <th>Médico</th>
                <th style="display:none">Medic Id</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody id="turns-body">
        </tbody>
    </table>
</div>
<nav>
    <ul id="turns-pagination" class="pagination">
    </ul>
</nav>
